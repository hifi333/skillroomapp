<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="请输入验证码"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_solutions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:clickable="true"
        android:onClick="onclick_shoubudaoyanzhengma"
        android:text="收不到验证码？"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/textView_mobile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/textView_welcome"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="验证码已经发送至手机：xxxxxxxx" />

    <EditText
        android:id="@+id/editText_Yanzhengma_1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_mobile2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:digits="1234567890"
        android:maxLength="1"
        android:singleLine="true"
         />

    <EditText
        android:id="@+id/editText_Yanzhengma_2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/editText_Yanzhengma_1"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/editText_Yanzhengma_1"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:digits="1234567890"
        android:maxLength="1"
        android:singleLine="true"
         />

    <EditText
        android:id="@+id/editText_Yanzhengma_3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/editText_Yanzhengma_2"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/editText_Yanzhengma_2"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:digits="1234567890"
        android:maxLength="1"
        android:singleLine="true"
         />

    <EditText
        android:id="@+id/editText_Yanzhengma_4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/editText_Yanzhengma_3"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/editText_Yanzhengma_3"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:digits="1234567890"
        android:maxLength="1"
        android:singleLine="true"
         />

</RelativeLayout>