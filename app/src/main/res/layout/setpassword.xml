<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="请设置密码"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_solutions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:text="密码：" />

    <TextView
        android:id="@+id/textView_passwordtip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_password"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/editText_password"
        android:layout_marginTop="10dp"
        android:text="需6～20 位字符" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_solutions"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView_solutions"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_nextstep"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_alignLeft="@+id/textView_passwordtip2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView_passwordtip2"
        android:layout_marginTop="30dp"
        android:background="@android:color/holo_blue_light"
        android:text="下一步" />
</RelativeLayout>